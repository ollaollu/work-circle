<div class="row">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>
                SPORT
              </th>
              <th>
                COUNTRY
              </th>
              <th>
                LEAGUE
              </th>
              <th>
                TEAMS
              </th>
              <th>
                BET
              </th>
              <th>
                ODDS
              </th>
              <th>
                GAME TIME
              </th>
              <th>
                DATE (Y-M-D)
              </th>
              <th>
                STATUS
              </th>

              <th>
                ACTIONS
              </th>

            </tr>
          </thead>
          <tbody>
            <% @tips.each do |tip| %>
              <tr id="tip_<%=tip.id%>">
                <td class="text-center">
                  <%= tip.sport %>
                </td>
                <td class="text-center">
                  <%= tip.country %>
                </td>
                <td class="text-center">
                  <%= tip.league %>
                </td>
                <td>
                  <%= tip.teams %>
                </td>
                <td>
                  <%= tip.bet %>
                </td>
                <td class="text-center">
                  <%= tip.odds %>
                </td>
                <td class="text-center">
                  <%= tip.game_time.strftime('%H:%M') %>
                </td>
                <td class="text-center">
                  <%= tip.tip_date.strftime('%Y-%m-%d') %>
                </td>
                <td class="text-center">
                  <div class="checkbox-<%= tip.status.downcase %>">
                    <input type="checkbox" disabled="true">
                  </div>
                </td>

                <td>
                  <%= link_to "Edit", edit_tip_path(tip), remote: true, class: "btn btn-primary" %>
                  <%= link_to "Delete", tip, data: {confirm: 'Are you sure?'}, method: :delete, remote: true %>
                </td>

              </tr>
            <% end %>
          </tbody>
      </table>
    </div>


    <%= link_to "Add New Tip", new_tip_path(format: :js), remote: true, class: "btn btn-primary", id: "new_tip_link" %>

</div>
